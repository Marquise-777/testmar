<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="/stylesheet/stars.css">
    <div class="row mb-5">
        <div class="col-6">

            <div id="riahbukControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <% campgrounds.images.forEach((img, i)=> {%>
                        <div class="carousel-item <%= i === 0? ' active' : ''%>">
                            <img src="<%= img.url %>" class="d-block w-100" alt="" width="200" height="360">
                        </div>
                        <% }) %>
                            <% if(campgrounds.images.length> 1) {%>
                                <button class="carousel-control-prev" type="button" data-bs-target="#riahbukControls"
                                    data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#riahbukControls"
                                    data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                                <% } %>
                </div>
            </div>
            <div class="card bg-secondary">

                <div class="card-body" style="font-size: 20px;">
                    <h3 class="card-header border-bottom">
                        <b>
                            <%= campgrounds.title%>
                        </b>
                    </h3>
                    <p class="card-text fs-5">
                        <%= campgrounds.description%>
                    </p>
                    <p class="card-text">
                        â‚¹ <%= campgrounds.price%>/night
                    </p>
                    <p class="card-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-geo-alt" viewBox="0 0 16 16">
                            <path
                                d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                        <%= campgrounds.location%>
                    </p>
                    <p class="card-footer">
                        By : <%= campgrounds.author.username%>
                    </p>
                    <p class="card-text">
                        <% if(currentUser && campgrounds.author.equals(currentUser._id)) {%>
                            <div class="d-flex justify-content-around mt-3">
                                <a href="/campgrounds/<%= campgrounds._id%>/edit" class="">
                                    
                                        <button class="btn-lg btn-secondary">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"
                                                fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                                <path
                                                    d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                            </svg>
                                    
                                    </button>
                                </a>
                                <form action="/campgrounds/<%= campgrounds._id%>?_method=DELETE" method="POST">
                                    <button class="btn-lg btn-secondary">

                                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"
                                            fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>

                                    </button>
                                </form>
                            
                            </div>
                            <% } %>
                    </p>
                </div>

            </div>

        </div>
        <div class="col-6">
            <% if(currentUser) {%>
                <form action="/campgrounds/<%= campgrounds._id %>/reviews" method="POST" class="mb-3 validate-form"
                    novalidate>
                    <fieldset class="starability-basic">
                        <legend>Rate It!</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="mb-3">
                        <label class="form-label" for="">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                            required></textarea>
                    </div>
                    <button class="btn btn-success ms-3">Submit</button>
                </form>
                <% } %>
                    <% for (let reviews of campgrounds.reviews) { %>
                        <div class="card bg-secondary mb-3">
                            <div class="card-body">

                                <p class="starability-result" data-rating="<%= reviews.rating%>">
                                </p>
                                <p>
                                    <%= reviews.body%>
                                </p>
                                <h6 class="card-subtitle mb-3">By <%= reviews.author.username %>
                                </h6>
                                <% if(currentUser && reviews.author.equals(currentUser._id)) {%>
                                    <form
                                        action="/campgrounds/<%= campgrounds._id %>/review/<%= reviews._id %>?_method=DELETE"
                                        method="POST">
                                        <button class="btn btn-danger">REMOVE</button>
                                    </form>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>
        </div>